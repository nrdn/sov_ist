extends ../layout

block title
	title= __('ОФИЦИАЛЬНАЯ ИНФОРМАЦИЯ')


block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/blocks_grid.css' + version)
	link(rel='stylesheet', type='text/css', href='/build/css/official.css' + version)
	link(rel='stylesheet', type='text/css', href='/build/css/official_mobile.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/libs/js/imagesloaded.pkgd.min.js' + version)
	script(type='text/javascript', src='/build/libs/js/masonry.pkgd.min.js' + version)
	//- script(type='text/javascript', src='/build/js/scroll.js' + version)
	script(type='text/javascript', src='/build/js/official.js' + version)



block content
	.content_title= __('Официальная информация')
	.content_outer_block
		each official in officials
			.content_item
				a.item_title(href=official.path)= official.i18n.title.get(locale)

block scroll
	.content_title
	.content_scroll_items
		each image in images
			.content_scroll_item
				img(src=image.path.thumb)