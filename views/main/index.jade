extends ../layout

block title
	title ГЛАВНАЯ

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/main.css' + version)

block content_scripts
	script(type='text/javascript', src='/build/libs/js/jquery-swing-scroll.js' + version)
	script(type='text/javascript', src='/build/libs/js/imagesloaded.pkgd.min.js' + version)
	script(type='text/javascript', src='/build/libs/js/masonry.pkgd.min.js' + version)
	script(type='text/javascript', src='/build/js/main.js' + version)


block content
	- var months = ['января', 'февраля', 'мара', 'апреля', 'мая', 'июня', 'июля', 'августа', 'сентября', 'октября', 'ноября', 'декабря']
	.content_title Историю создаете вы
	.content_navigate_block
		.navigate_title Наши последние события:
		.navigate_items_block
			.navigate_item экскурсии
			.navigate_item выствки
			.navigate_item лекции
			.navigate_item мероприятия
			.navigate_item Дискуссионная площадка Тверская XXI
	.content_outer_block
		.content_news_block
			each item in news
				.content_item.news
					.item_date= item.date.getDate() + ' ' + months[item.date.getMonth()] + ' ' + item.date.getFullYear()
					.item_title= item.i18n.title.get('ru')

		each event in events
			if (event.status == 'important')
				.content_item.event.important(style='background-image: url(' + event.images[0].original + ')')
					.item_date 03/05/2015 - 25/05/2015
					.item_title= event.i18n.title.get('ru')
			else
				.content_item.event
					img.item_image(src=event.images[0].thumb)
					.item_date 03.05.2015 - 25.05.2015
					.item_title= event.i18n.title.get('ru')

block scroll
	.content_title розочка
	.content_scroll_item 1
	.content_scroll_item 2
	.content_scroll_item 3
	.content_scroll_item 4
	.content_scroll_item 5
	.content_scroll_item 6
	.content_scroll_item 7
	.content_scroll_item 8