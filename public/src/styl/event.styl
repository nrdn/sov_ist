.content_column
	&.main
		// background-color #DFA3D7
	&.scroll
		// background-color #48A1DF
		.content_scroll_item
			overflow hidden
			position relative
			img
				width 320px
				min-height 100px
				display block
			.content_image_description
				position absolute
				bottom 10px
				left 10px
				right 10px
				background rgba(0,0,0,0.7)
				padding 10px
				color #fff
				display none
			&:hover
				.content_image_description
					display block

.content_title
	width 700px

.content_date
	font 16pt/18pt 'PT Sans'
	margin-bottom 60px
	color #B8B8B8
	width 700px

.content_body
	width 700px