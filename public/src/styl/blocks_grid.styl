.content_item
	// background-color #647A8A
	width 220px
	margin-bottom 20px
	float left
	min-height 220px
	text-decoration none
	color black
	display block
	.item_image
		width 220px
		display block
	.item_description
		margin-top 10px
		.item_date
			font 10pt/12pt 'PT Sans'
		.item_title
			font-weight bold
	&.important
		background-size cover
		background-position center
		width 460px
		height 460px
		.item_description
			box-sizing border-box
			width 460px
			color white
			text-shadow 1px 1px 2px black, 0 0 2em black;
			position absolute
			padding 10px
			bottom 0
			// background-color rgba(0, 0, 0, 0.7)
			.item_date
				font 10pt/12pt 'PT Sans'
			.item_title
				font 16pt/18pt 'PT Sans'


