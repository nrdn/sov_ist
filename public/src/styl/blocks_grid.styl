.content_item
	// background-color #647A8A
	width 220px
	margin-bottom 20px
	float left
	min-height 120px
	text-decoration none
	color black
	display block
	&:hover
		.item_title
			color #777
	.item_image
		width 220px
		display block
	.item_description
		padding-top 10px
		position relative
		z-index 1
		background #fff
		.item_date
			font 10pt/12pt 'PT Sans'
		.item_title
			//font-weight bold
			font 12pt/14pt 'PT Sans'
	&.important
		background-size cover
		background-position center
		width 460px
		height 460px
		.item_description
			background transparent
			box-sizing border-box
			width 460px
			color white
			position absolute
			padding 10px
			bottom 0
			background url(/images/design/bckg.png) 0 0
			background-size 100% 170%
			padding-top 50px
			.item_date
				font 10pt/12pt 'PT Sans'
			.item_subs
				color #676767
			.item_title
				font 16pt/18pt 'PT Sans'
				color #fff


