.parters_block
.info_block_title
	font 20pt/21pt 'PT Serif'
	margin-top 25px
	margin-bottom 40px

.partners_phone
	color #7e7e7e
	font 16pt/18pt 'PT Sans'

.partners_info
	text-align center
	border-top 1px solid #ccc
	padding 20px 0
	margin-bottom 50px
	font-size 16px

.partner_block
	position relative
	margin-bottom 25px
	overflow hidden

.partner_item
	width 220px
	float left
	filter grayscale(1)
	-webkit-filter grayscale(1)
	& > div
		margin 0 auto
	&:hover
		filter none
		-webkit-filter none

.partner_item_image,
.partner_item_name,
.partner_item_type
	width 220px

.partner_item_image
	height 220px
	background-size 190px
	background-repeat no-repeat
	background-position 50%
	margin-bottom 10px

.partner_item_name
	font-weight bold
	font-size 16px
	text-align center

.partner_item_type
	font-style italic

.partners_divide
	border-top 1px solid #b8b8b8
	margin-bottom 40px

div#CDSWIDEXC
	&.widEXC
		margin 0 auto
		width 180px
		height 160px