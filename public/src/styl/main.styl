.content_outer_block
	opacity 0
	transition opacity 0.2s ease-in-out
	padding-bottom 40px
	.load_more
		position absolute
		bottom 0
		left 0
		right 0
		.load_more_inner
			width 180px
			margin 0 auto
			background #7b7b7b
			color #fff
			text-align center
			height 35px
			line-height 35px
			cursor pointer
			&:hover
				background #4c4c4c

.content_item
	&.event
		float left
		.content_inner
		&:hover
			&:after
				position absolute
				top 0
				left 0
				right 0
				bottom 0px
				background rgba(0,0,0,0.2)
				content ''
				z-index 0
		.item_category
			font-size 14px
			color #777
			display block
			text-decoration underline
			&:hover
				color #c4143b
			&.ru
				&.exhibition
					&:after
						content 'Выставки'
				&.excursion
					&:after
						content 'Экскурсии'
				&.lecture
					&:after
						content 'Лекции'
				&.teach
					&:after
						content 'Центр музейной педагогики'
				&.action
					&:after
						content 'Мероприятия'
				&.education
					&:after
						content 'Образовательные программы'
				&.special
					&:after
						content 'Новости'

			&.en
				&.exhibition
					&:after
						content 'Exhibitions'
				&.excursion
					&:after
						content 'Excursions'
				&.lecture
					&:after
						content 'Lectures'
				&.teach
					&:after
						content 'Museum pedagogic centre'
				&.action
					&:after
						content 'Actions'
				&.education
					&:after
						content 'Educational programs'
				&.special
					&:after
						content 'News'

			&:after
				display block
				content ''
	&.news
		box-sizing border-box
		// background-color #604A8A
		float none
		margin-bottom 20px
		min-height 0px
		margin-bottom 0px
		border-top 1px solid #B8B8B8
		padding-top 10px
		padding-bottom 10px
		padding-left 5px
		padding-right 5px
		.item_date
			margin-top 10px
			color #B8B8B8
		&.content_news_goto
			margin-bottom 0px
			font-weight bold
			&:hover
				background none
				color #555
		&:hover
			background-color rgb(240, 240, 240)
			color #000

.cdsROW
	.cdsLocName
		a
			font-weight normal!important
			font 11pt/12pt 'PT Sans'!important
	&.narrow
		width 196px!important
	&.border
		border 1px solid transparent!important
	&.shadow
		box-shadow none
		-webkit-box-shadow none!important
		-moz-box-shadow none!important

.controlquality
	width 100%
	display block
	margin 10px 0

.tripadvisor
	margin 0 0 10px

.content_news_block
	// background-color #318A4E
	width 220px
	position absolute
	left 720px
	margin-bottom 20px
	@media screen and (max-width: 1280px)
		left 480px

.overlay_block
	position fixed
	background rgba(0,0,0,0.8)
	top 0
	bottom 0
	left 0
	right 0
	z-index 5000
	display none
.overlay_close
	top 0
	bottom 0
	left 0
	right 0
	z-index 10
	position absolute
.overlay_inner
	position absolute
	width 300px
	height 410px
	margin -205px 0 0 -150px
	top 50%
	left 50%
	background #fff
	z-index 20
	.overlay_start_block
		width 230px
		margin 10px auto
		text-align center
		border-bottom 1px solid #b8b8b8
		padding 70px 0 10px
		background url(/images/design/copy.png) 50% 13px no-repeat
		background-size 90px
		z-index 100
	.overlay_social_block
		overflow hidden
		border-bottom 1px solid #B8B8B8
		width 230px
		margin 0 auto 20px
		padding-bottom 10px
		a
			text-align center
			font 17px/35px 'Icons'
			width 150px
			margin 10px auto
			height 35px
			display block
			color #fff
			cursor pointer
			text-decoration none
			&.subscribe_vk
				background-color #4E729A
			&.subscribe_fb
				background-color #4D68A2
			&.subscribe_tw
				background-color #41ABE1
			&:hover
				opacity 0.8
	.overlay_close_block
		width 150px
		margin 10px auto
		background #b8b8b8
		line-height 35px
		text-align center
		cursor pointer
		&:hover
			opacity 0.8

.kinologo, .contnet_banner
	margin 0 0 10px
	display block
	img
		width 100%
	&:hover
		opacity 0.8

.content_banner_gif
	margin 0 0 10px
	display block
	img
		width 100%
	&:hover
		opacity 0.8

.top_banner_outer
	height 100px
	width 100%
	position relative
	margin-bottom 40px
	.top_banner
		height 100px
		width 100%
		position absolute
		background-position 50%
		background-repeat no-repeat
		background-size cover
		display block
		opacity 0
		z-index -1000
		transition opacity 0.1s ease-in
		@media screen and (max-width: 1280px)
			background-size contain
	a.top_banner
		&:hover
			opacity 0.9!important
.top_banner_counter
	text-align center
	span
		display inline-block
		font-size 16px
		line-height 16px
		padding 0 3px
		color #b8b8b8