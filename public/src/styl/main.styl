.content_column
	&.main
		// background-color #DFA3D7
	&.scroll
		background-color #48A1DF
		.content_scroll_item
			height 500px
			background-color #647A8A
			margin-bottom 10px

.content_item
	width 220px
	margin-bottom 20px
	&.event
		// min-height 220px
		float right
		// background-color #647A8A
		.item_image
			width 220px
			display block
		.item_date
			margin-top 10px
			font 10pt/12pt 'PT Sans'
		.item_title
			font-weight bold
		&.important
			background-size cover
			background-position center
			width 460px
			height 460px
			.item_title
				box-sizing border-box
				width 460px
				position absolute
				padding 10px
				bottom 0
				color white
				font 16pt/18pt 'PT Sans'
				background-color rgba(0, 0, 0, 0.7)
	&.news
		// height 100px
		// background-color #604A8A
		.item_date
			color red
		&:last-child
			margin-bottom 0px

.content_news_block
	width 220px
	// background-color #318A4E
	float right
	margin-bottom 20px


