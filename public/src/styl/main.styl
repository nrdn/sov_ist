.content_column
	&.main
		// background-color #DFA3D7
	&.scroll
		background-color #48A1DF
		.content_scroll_item
			width 320px
			min-height 200px
			display block
			background-color #647A8A

.content_item
	width 220px
	margin-bottom 20px
	display block
	text-decoration none
	color black
	&.event
		// min-height 220px
		float right
		background-color #647A8A
		.item_image
			width 220px
			display block
		.item_description
			margin-top 10px
			.item_date
				font 10pt/12pt 'PT Sans'
			.item_title
				font-weight bold
		&.important
			background-size cover
			background-position center
			width 460px
			height 460px
			.item_description
				box-sizing border-box
				width 460px
				color white
				position absolute
				padding 10px
				bottom 0
				background-color rgba(0, 0, 0, 0.7)
				.item_date
					font 10pt/12pt 'PT Sans'
				.item_title
					font 16pt/18pt 'PT Sans'
	&.news
		border-bottom 1px solid #B8B8B8
		// height 100px
		// background-color #604A8A
		.item_title
			padding-bottom 5px
		.item_date
			font 10pt/12pt 'PT Sans'
			color red
		&:last-child
			margin-bottom 0px

.content_news_block
	width 220px
	// background-color #318A4E
	float right
	margin-bottom 20px


