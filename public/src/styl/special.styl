.content_outer
	.content_subtitle
		min-height 450px
		overflow hidden
		margin-bottom 40px
		background-size cover
		background-position 50%
		position relative
		&:after
			position absolute
			top 0
			bottom 0
			right 0
			left 0
			z-index 1
			display block
			content ''
			background rgba(0, 0, 0, 0.54)
		.content_subtitle_inner
			padding-top 75px
			margin-left 170px
			margin-right 170px
			padding-bottom 10px
			color #fff
			z-index 2
			font 36px/42px 'PT Sans'
			font-weight bold
			border-bottom 1px solid rgba(255, 255, 255, 0.4)
			position relative
			z-index 10
		.content_decription
			margin-left 170px
			margin-right 170px
			color #fff
			padding 10px 0
			border-bottom 1px solid rgba(255, 255, 255, 0.4)
			position relative
			z-index 10
		.content_quiz
			padding 14px 11px
			width 240px
			display block
			text-align center
			color #000
			text-decoration none
			font-size 19px
			margin 20px auto 40px
			background rgba(255,255,255,0.8)
			z-index 3
			outline 1px solid rgba(196, 20, 59,0.7)
			outline-offset 2px
			position relative
			z-index 10
			&:hover
				background #fff
	.content_test
		display none
&:target
	.content_subtitle
		display none
	.content_test
		display block
iframe
	width 100%
	border none
	height 1200px