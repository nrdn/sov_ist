.content_item
	height 280px
	box-sizing border-box
	padding-left 30px
	&.current
		.item_title
			color #c4143b!important

	.item_image
		width 160px
		overflow hidden
	.item_title
		font-weight bold
		margin-top 15px
	&.important
		background-size 460px
		height 580px
		background-position 0 0
		background-repeat no-repeat
		.item_description
			background transparent
			bottom 15px
			width 400px
			text-align center
			text-shadow none
			margin-left 0
			.item_title
				font-weight bold
				margin-top 15px
				font 19pt/18pt 'PT Serif'
				color #000
				text-shadow none
				text-align center
				width 235px
				margin 0 auto
				font-weight bold
			.item_type
				font-size 13pt
				margin-top 15px

	.item_description
		font 12pt/14pt 'PT Serif'
		.item_type
			font 10pt/12pt 'PT Sans'
			color #969696
			margin-top 6px

