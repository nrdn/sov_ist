.content_column.scroll
	.content_scroll_items
		box-sizing border-box
		background #ededed
		// height auto
		padding-top 160px
		padding-bottom 146px

.people_info
	margin 10px auto 0
	font 12pt/14pt 'PT Serif'
	width 250px
	padding 0 10px 10px
	border-top 1px solid transparent
	border-bottom 1px solid transparent
	&.current
		background #f4f4f4
		border-top 1px solid #b8b8b8
		border-bottom 1px solid #b8b8b8
		& .people_name
				color #c4143b

.people_name
	margin-bottom 5px
	margin-top 10px
	font 12pt/14pt 'PT Serif'
	font-weight bold

.people_type
	margin-bottom 5px
	font 10pt/10pt 'PT Sans'
	color #969696
