// global
.content_column.main
	@media screen and (max-width: 920px)
		.content_outer_block
			position static!important
			height auto!important
			display flex
			flex-flow row wrap
			justify-content flex-start
		.content_item
			order 2
			position static!important
			width calc(50vw - 40px)
			max-width 180px
			margin 10px
			flex-grow 1
			// transition none!important
			// transform none!important
			// opacity 1!important
			&.event
				height 320px
				background #fff
			&:nth-child(3)
				order 0
			&:nth-child(4)
				order 0
			&:nth-child(5)
				order 0
			&:nth-child(6)
				order 0

			&.news
				width 100%
				max-width 100%
				margin 0 0
				padding 20px 10px
		.content_news_block
			order 1
			position static!important
			margin 24px 24px 0
			background #fff
			flex 1 1 100%
			.banners_block
				height auto!important
				.twitter_block
					display none
		.content_item
			.item_image
				width 100%
			.item_description
				padding 8px 8px 0
			&:hover
				&:after
					display none
		.content_item.important
			&.event
				width calc(100vw - 40px)
				max-width 380px
				flex-grow 1
				height 550px
				display flex
				flex-direction column
				justify-content flex-end
				background-size cover
				background-position 50% 0
				.item_description
					position static!important
					width 100%
					height 221px
					background rgb(71, 71, 71)
					text-shadow none