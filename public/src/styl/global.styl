body
	margin 0
	padding 0
	font 12pt/14pt 'PT Sans'

html, body, .main_block, .content_block, .content_columns_block, .content_column
	height 100%

.header_block
	position absolute
	width 100%
	background-color rgba(0, 0, 0, 0.7)
	z-index 999

.search_block
	width 100%
	display none

.search_input
	display block
	width 100%
	font-size 20pt
	color white
	background-color rgba(0, 0, 0, 0)
	border 0
	margin 0
	padding 0
	outline none

.search_result
	width 100%
	margin-top 10px
	display none
	color white
	a
		color white

.search_context
	display none

.header_inner
.search_inner
	width 1280px
	padding-top 10px
	padding-bottom 10px
	margin 0 auto
	overflow hidden

.menu_block
	overflow hidden
	&.left
		float left
		.menu_item_block
			margin-left 15px
			float left
			.menu_item
				display block
				margin-top 4px
				font 12pt/14pt 'PT Serif'
				color white
				text-decoration none
				&:hover
					color red
			.menu_drop
				width 115px
				margin-left -10px
				padding-top 10px
				position absolute
				display none
				.drop_inner
					width 115px
					padding 0 10px 10px 10px
					background-color rgba(0, 0, 0, 0.7)
			&:hover .menu_drop
				display block
	&.right
		float right

.social_block
	float left
	img
		filter: invert(100%)
		display block
		float left
		margin-right 5px
		width 25px

.options_block
	filter: invert(100%)
	float left
	border-left 1px solid black
	margin-left 10px
.option
	margin-left 10px
	float left
	cursor pointer
	display block
	&.lang
		margin-top 4px
	&.search
		width 25px
		height 25px
		background url('/images/design/icons/search.png') center no-repeat
		background-size cover

.header_logo
	display block
	overflow hidden
	margin-right 40px
	float left
	.logo_image
		height 23px
		display block
		float left
	.logo_title
		margin-left 15px
		color white
		text-decoration none
		width 160px
		float left
		font 8pt/10pt 'PT Serif'

.content_columns_block
	overflow hidden
	width 1280px
	margin 0 auto

.content_column
	padding-top 100px
	box-sizing border-box
	overflow scroll
	&.main
		width 960px
		float left
		.column_inner_block
			padding-right 20px
		.content_outer_block
			overflow hidden
	&.scroll
		width 320px
		float left

.content_title
	margin-bottom 60px
	font-size 24pt

.content_navigate_block
	overflow hidden
	margin-bottom 30px
	.navigate_title
		font-size 12pt
		float left
		font-weight bold
	.navigate_items_block
		float left
		.navigate_item
			float left
			margin-left 5px
			font-size 12pt
			cursor pointer
			&:hover
				text-decoration underline

.footer_block
	font 10pt/12pt 'PT Serif'
	width 540px
	margin 0 auto
	padding-top 20px
	padding-bottom 10px
	text-align center