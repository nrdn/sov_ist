body
	margin 0
	padding 0

html, body, .main_block, .content_block, .content_columns_block, .content_column
	height 100%

.header_block
	position absolute
	width 100%
	background-color #8A4B23

.header_inner
	width 1280px
	padding-top 10px
	padding-bottom 10px
	margin 0 auto
	// margin-left 50px
	overflow hidden

.menu_block
	overflow hidden
	&.left
		float left
	&.right
		float right

.social_block
	float left
	 img
			width 25px

.options_block
	float left
	margin-left 10px
.option
	margin-left 5px
	float left

.header_logo
	width 60px
	height 30px
	float left
	background-color #4C8A36

.content_columns_block
	overflow hidden
	width 100%

.content_column
	padding-top 80px
	&.main
		width 75%
		float left
		background-color #DFA3D7
	&.scroll
		width 25%
		float left
		background-color #48A1DF